@keyframes stretch {
	0% {
		transform: scale(.2);
		background-color white
	}
	100% {
		transform: scale(1.4);
	}
}

html, body
	position relative
	height 100%
	overflow hidden

body
	margin 0
	padding 0

.banner-block
	z-index 999999999
	position absolute
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0.85)
	top 0; left 0; right 0; bottom 0
	transition all .8s cubic-bezier(.07,.89,.34,1.4)
	&.left
		left -30%
		&.out
			left -100%
	&.right
		left 30%
		&.out
			left 100%
	&.down
		top 30%
		&.out
			top 100%
	&.up
		top -30%
		&.out
			top -100%

.navigate-buttons
	z-index 99999999999999
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	margin auto
	width 180px
	height 250px
	&.out
		display none
	.navigate-button
		width 60px
		height 60px
		border-radius 100%
		margin auto
		position absolute
		border 4px solid white
		box-sizing border-box
		&.active
			background-color white
			transition .2s ease-in-out
			transform: scale(1.3);
			&.up
				top -20px
			&.left
				left -20px
			&.right
				right -20px
			&.down
				bottom -20px
		&.up
			left 0; right 0; top 0
		&.down
			bottom 0; left 0; right 0
		&.left
			left 0; top 0; bottom 0; bottom 0
		&.right
			right 0; top 0; bottom 0

.navigate-blocks
	color white
	background-color rgba(0, 0, 0, 0.85)
	width 100%
	position fixed
	z-index 9999
	overflow hidden
	max-height 0
	margin 0
	padding 0
	transition max-height .8s ease-in-out
	&.active
		max-height 1000px
		transition max-height .8s ease-in-out
	.navigate-block
		text-align center
		font 12pt/14pt 'Helvetica'
		padding-top 8px
		padding-bottom 8px
		&.active
			background-color rgba(255, 255, 255, 0.8)
			color black
			font 20pt/22pt 'Helvetica'

.swiper-container
	width 100%
	height 100%
	background-color black
	color white
	overflow hidden
	.swiper-slide
		&.close
			.slide-image
				transition background-size .4s ease-in-out
				background-size 65%
		.slide-image
			transition background-size .2s ease-in-out
			background-position bottom
			background-size 100%
			background-repeat no-repeat
			width 100%
			height 80%
		.slide-footer
			box-sizing border-box
			padding-top 80px
			width 100%
			height 20%
			transition height .2s ease-in-out
			background-color black
			font 12pt/16pt 'Helvetica'
			.footer-inner
				max-width 800px
				margin 0 auto
				overflow hidden
				.footer-label
					position relative
					box-sizing border-box
					padding 15px
					width 50%
					float left
