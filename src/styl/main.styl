@font-face {
	font-family: 'Voina';
	src: url('../../fonts/Voina.ttf');
}

@keyframes move_left {
	0% { transform: translate(0, 0); }
	100% { transform: translate(-40px, 0); }
}

@keyframes move_right {
	0% { transform: translate(0, 0); }
	100% { transform: translate(40px, 0); }
}

@keyframes move_up {
	0% { transform: translate(0, 0); }
	100% { transform: translate(0, -40px); }
}

@keyframes move_down {
	0% { transform: translate(0, 0); }
	100% { transform: translate(0, 40px); }
}

html, body
	position relative
	// height 1920px
	height 100%
	overflow hidden

body
	margin 0
	padding 0

.banner-block
	z-index 999999999
	position absolute
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0.85)
	top 0; left 0; right 0; bottom 0
	transition all .4s ease-in-out
	&.left
		left -30%
		&.out
			left -100%
	&.right
		left 30%
		&.out
			left 100%
	&.down
		top 30%
		&.out
			top 100%
	&.up
		top -30%
		&.out
			top -100%

.navigate-buttons
	z-index 99999999999999
	position fixed
	top 0; bottom 0; left 0; right 0
	margin auto
	width 180px
	height 250px
	&.out
		display none
	.navigate-button
		width 60px
		height 60px
		border-radius 100%
		margin auto
		position absolute
		border 4px solid white
		box-sizing border-box
		transition .6s ease-out
		&.active
			background-color white
			transition .6s ease-out
			&.up
				animation-name none
				top -40px
			&.left
				animation-name none
				left -40px
			&.right
				animation-name none
				right -40px
			&.down
				animation-name none
				bottom -40px
		&.up
			animation move_up 1.4s infinite alternate
			left 0; right 0; top 0
		&.down
			animation move_down 1.4s infinite alternate
			bottom 0; left 0; right 0
		&.left
			animation move_left 1.4s infinite alternate
			left 0; top 0; bottom 0; bottom 0
		&.right
			animation move_right 1.4s infinite alternate
			right 0; top 0; bottom 0

.navigate-blocks
	color white
	background-color rgba(0, 0, 0, 0.85)
	width 100%
	position fixed
	z-index 99999999999999
	overflow hidden
	max-height 0
	margin 0
	padding 0
	transition max-height .8s ease-out
	&.force
		transition max-height .4s ease-out
	&.active
		max-height 1000px
		transition max-height .8s ease-in
	.navigate-block
		text-align center
		font 16pt/16pt 'Voina'
		padding-top 14px
		padding-bottom 8px
		position relative
		&.active
			// background-color rgba(255, 255, 255, 0.4)
			// background-color white
			// color black
			font 28pt/28pt 'Voina'
			&:before
			&:after
				content ''
				position absolute
				width 60px
				height 5px
				top 48%
				background-color white
			&:before
				margin-left -80px
			&:after
				margin-left 20px


.swiper-container
	width 100%
	height 100%
	background-color black
	color white
	overflow hidden
	.swiper-slide
		&.close .slide-image
			transition transform .4s ease-in-out
			transform scale(.6)
		.slide-image
			transition transform .2s ease-in-out
			background-position bottom
			background-size contain
			background-repeat no-repeat
			height 80%
			left 40px
			right 40px
			position absolute
			margin auto
		.slide-footer
			box-sizing border-box
			padding-top 80px
			position absolute
			bottom 0
			width 100%
			height 20%
			transition height .2s ease-in-out
			background-color black
			font 12pt/16pt 'Times'
			.footer-inner
				max-width 800px
				margin 0 auto
				overflow hidden
				.footer-label
					hyphens auto
					position relative
					box-sizing border-box
					padding-right 20px
					width 50%
					float left
					&:last-child
						padding-left 20px
						padding-right 0
					.label-museum
						margin-top 10px
