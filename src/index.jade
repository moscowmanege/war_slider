doctype html
html
	head
		title W A R | S L I D E R
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
		link(rel='stylesheet', type='text/css', href='../css/main.css')
		link(rel='stylesheet', type='text/css', href='../css/swiper.min.css')
		script(type='text/javascript', src='../js/jquery-2.2.4.min.js')
		script(type='text/javascript', src='../js/swiper.jquery.min.js')
		script(type='text/javascript', src='../js/main.js')
	body
		.swiper-container.swiper-container-v
			.swiper-pagination.swiper-pagination-v
			.swiper-wrapper
				each block in blocks
					.swiper-slide
						.slide-title= block.title
						.swiper-container.swiper-container-h
							.swiper-pagination.swiper-pagination-h
							.swiper-wrapper
								each elem in block.elems
									.swiper-slide= elem.ru.title